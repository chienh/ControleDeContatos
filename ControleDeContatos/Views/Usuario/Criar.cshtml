@using ControleDeContatos.Enums;
@model UsuarioModel

@{
    ViewData["Title"] = "Criação de Usuários";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="UsuarioNome" class="form-control" placeholder="Digite seu nome">
        @Html.ValidationMessageFor(x =>x.UsuarioNome)
    </div>

    <div class="mb-3">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login">
        @Html.ValidationMessageFor(x =>x.Login)
    </div>

    <div class="mb-3">
        <label for="email">Email </label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu Email" />
        @Html.ValidationMessageFor(x =>x.Email)
    </div>

    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
        @Html.ValidationMessageFor(x =>x.Senha)
    </div>

    <div class="mb-3">
        <label for="perfil">Perfil</label>
        <select asp-for="Perfil" asp-items="Html.GetEnumSelectList<PerfilEnum>()" class="form-control"></select>        
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">
            Cadastrar Usuário
        </button>
        <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
    </div>
</form>


